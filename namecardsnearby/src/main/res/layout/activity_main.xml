<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- DrawerLayout has 2 children:
     Linear layout contains app_bar and tabs
     Fragment contains navigation drawer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.namecardsnearby.MainActivity">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <!-- The sliding tab itself -->
        <com.namecardsnearby.SlidingTabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ViewPager is where recyclerview shows -->
        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!--Navigation Drawer -->
    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.namecardsnearby.NavigationDrawerFragment"
        layout="@layout/fragment_navigation_drawer"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>
